<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:windowBackground">@color/grey_50</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="Text.Bold.Green" parent="AppTheme">
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="Text.Regular.Small" parent="AppTheme">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:textColor">@color/grey_900</item>
    </style>

    <style name="Text.Regular.Large" parent="AppTheme">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textSize">@dimen/font_size_large</item>
        <item name="android:textColor">@color/grey_900</item>
    </style>

    <style name="Text.Regular.Larger" parent="AppTheme">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textSize">@dimen/font_size_larger</item>
        <item name="android:textColor">@color/grey_900</item>
    </style>

    <style name="Text.Light" parent="AppTheme">
        <item name="fontFamily">@font/open_sans_light</item>
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:textColor">@color/grey_700</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
